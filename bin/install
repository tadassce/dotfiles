#!/bin/bash

# Install script for a fresh macOS install.
# Meant for copy-pasting rather than just running so far.

# - Install 1P and XCode from the MAS

xcode-select --install

# Install Homebrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew analytics off

brew install \
  ctags \
  docker-compose \
  fd \
  fzf \
  git \
  heroku/brew/heroku \
  htop \
  mas \
  ncdu \
  node \
  openssh \
  reattach-to-user-namespace \
  terminal-notifier \
  the_silver_searcher \
  tmux \
  vim \
  watch \
  zsh \
  zsh-autosuggestions

# Ruby
brew install chruby ruby-install

# To install useful key bindings and fuzzy completion:
$(brew --prefix)/opt/fzf/install

# Homebrew Cask
brew tap caskroom/cask
brew cask install \
  alfred \
  docker \
  appcleaner \
  karabiner-elements

# Set up dotfiles
brew tap thoughtbot/formulae
brew install rcm
git clone https://github.com/tadassce/dotfiles.git ~/.dotfiles
rcup

ln -s ~/Library/Mobile\ Documents/com\~apple\~CloudDocs ~/.icloud
touch ~/.private_aliases ~/.private_profile

# Set the default shell (and in Users' prefs)
chsh -s /usr/local/bin/zsh

# Vim Plugins
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
  https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
# :PlugInstall

# Vim undo (gitignored)
mkdir ~/.vim/undo

# Tmux Plugin Manager
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

# Set some macOS defaults
~/.dotfiles/macos-defaults

# Other tools
gem install pry pry-doc
npm i -g tldr

# Linters
gem install \
  standard \
  reek \
  rubocop \
  ruby-lint \
  coderay \
  brakeman \
  rails_best_practices
brew install \
  shellcheck \
  hadolint
npm i -g \
  standard \
  eslint-plugin-react \
  eslint@^4.1.1 \
  eslint-plugin-jsx-a11y@^5.1.1 \
  babel-eslint@^7.2.3 \
  eslint-config-react-app \
  eslint-plugin-import \
  eslint-plugin-flowtype \
  jshint \
  jsonlint \
  prettier \
  swaglint

# Some useful Quick Look plugins
brew cask install \
  qlstephen \
  qlmarkdown \
  quicklook-json \
  quicklook-csv \
  qlcolorcode \
  qlimagesize

# Screen Savers
brew cask install \
  aerial \
  brooklyn

# Sync Karabiner settings
ln -s ~/.icloud/Config/karabiner ~/.config/
launchctl kickstart -k gui/`id -u`/org.pqrs.karabiner.karabiner_console_user_server
