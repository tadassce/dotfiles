#! /usr/bin/env ruby
require 'colorize'

home = Dir.pwd
Dir['*'].each do |dir|
  if File.directory? dir
    Dir.chdir dir
    if File.exists?('.git')
      name = dir.split('/').last
      puts "Updating #{name.blue}"
      # system "git config git-up.bundler.check false"
      system 'git up'
    end
    Dir.chdir home
    puts
  end
end
